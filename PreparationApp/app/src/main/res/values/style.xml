<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Header">
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="Header.TextAppearance.Bold" parent="Header">
        <item name="fontFamily">@font/arima_madurai_extrabold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header.TextAppearance.Bold.White" parent="Header.TextAppearance.Bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Header.TextAppearance.Normal" parent="Header">
        <item name="fontFamily">@font/arima_madurai</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Header.TextAppearance.Normal.White" parent="Header.TextAppearance.Normal">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--   screen sub header title label -->

    <style name="SubHeader">
        <item name="android:textSize">@dimen/subheader_text_size</item>
    </style>

    <style name="SubHeader.TextAppearance.Normal" parent="SubHeader">
        <item name="fontFamily">@font/arima_madurai</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SubHeader.TextAppearance.Normal.White" parent="SubHeader.TextAppearance.Normal">
        <item name="android:textColor">@color/input_text_color</item>
    </style>

    <!-- app toolbar style -->

    <style name="ToolBarTitle">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="ToolBarTitle.TextAppearance.Thin" parent="ToolBarTitle">
        <item name="fontFamily">@font/arima_madurai_thin</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolBarTitle.TextAppearance.Normal.White" parent="ToolBarTitle.TextAppearance.Thin">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- input text style -->

    <style name="InputLabel">
        <item name="android:textSize">@dimen/input_label_text_size</item>
    </style>

    <style name="InputText">
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

    <style name="InputLabel.TextAppearance.Thin" parent="InputLabel">
        <item name="fontFamily">@font/arima_madurai_thin</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="InputLabel.TextAppearance.Normal" parent="InputLabel.TextAppearance.Thin">
        <item name="android:textColor">@color/input_text_color</item>
    </style>

    <style name="InputText.TextAppearance.Thin" parent="InputText">
        <item name="fontFamily">@font/arima_madurai_thin</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="InputText.TextAppearance.Normal" parent="InputText.TextAppearance.Thin">
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="InputText.TextAppearance.Error" parent="InputText.TextAppearance.Thin">
        <item name="android:textColor">@color/input_error</item>
        <item name="hintTextColor">@color/input_error</item>
        <item name="android:textColorHint">@color/input_error</item>
    </style>

    <!-- button style -->

    <style name="ButtonLabel.TextAppearance.Thin" parent="InputLabel">
        <item name="fontFamily">@font/arima_madurai_thin</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonLabel.TextAppearance.Normal" parent="ButtonLabel.TextAppearance.Thin">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>